{
  "compilerOptions": {
    "target": "es2020",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "composite": true,
    "emitDeclarationOnly": true,
    "rootDir": "./src",
    "outDir": "./dist/types",
    "paths": { "~/*": ["./src/*"] }
  },
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs"
    },
    "files": true
  },
  "include": ["./src/**/*"],
  "exclude": ["./dist", "./node_modules"]
}
